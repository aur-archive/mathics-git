post_install() {
   echo "Before you try to run 'mathicsserver' you need to run"
   echo "/usr/lib/python2.7/site-packages/mathics_initialize.py"
   echo "which will create the initial database under ~/.local/var/mathics"
   echo "the CLI version 'mathics' works without it"
}

post_upgrade() {
  post_install
}

